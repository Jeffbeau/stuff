\setlength\regleindent{1cm}
\setlength\reglethickness{1pt}

\newcommand{\regle}[2]{%
\settowidth\reglewidth{{#1}}
\setlength\regleA{3pt+\reglethickness/2}
\setlength\regleB{-3pt+\reglethickness/2}
{\color{#2}\vrule width \regleindent depth \regleB height \regleA%
\hglue 1em{#1}\hglue 1em%
\setlength\reglewidth{\hsize-\reglewidth-\regleindent-2em}
\vrule width \reglewidth depth \regleB height \regleA}
}

